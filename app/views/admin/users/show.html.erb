<br/>
<button type="button" class="btn btn-primary btn-sm">
  Nombre de comptes
  <span class="badge badge-light">
    <%= @user.bank_accounts.count %>
  </span>
</button>
<br/><br/><br/>

<h3 class="text-center">Liste des comptes de <%= @user.firstname %> <%= @user.lastname %></h3>
<br/>

<div class="table-responsive-sm">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Code banque</th>
        <th scope="col">Code guichet</th>
        <th scope="col">Numéro de compte</th>
        <th scope="col">Clé RIB</th>
        <th scope="col">Statut</th>
        <th scope="col">Solde</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <% @bank_accounts.each do |account| %>
      <%= render partial: '/shared/bank_accounts/bank_account_details', locals: { account: account} %>
    <% end %>
  </table>
</div>
