<br>
<h3 class="text-center">Inscrivez vous ici !</h3>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= render partial: '/shared/users/form', locals: { f: f } %>

  <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  <br>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe', class: 'form-control' %>
  <br>
  <%= f.password_field :password_confirmation, autocomplete: "off",
    placeholder: 'Confirmation de mot de passe', class: 'form-control' %>
  <br>

  <%= f.submit "S'inscrire", class: 'btn btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>

<script type="text/javascript">
  $("#user_title_mr").prop("checked", true);
</script>
